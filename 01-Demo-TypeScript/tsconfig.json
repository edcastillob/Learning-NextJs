{
    "compilerOptions": {
      "target": "ES5",
      "module": "CommonJS",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "jsx": "preserve",
      "allowJs": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "incremental": true
    },
    "include": [
        "nest-env.d.ts",
        "**/*.ts",
         "**/*.tsx"],
    "exclude": ["node_modules"]
  }
  